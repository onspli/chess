{
    "name": "onspli/chess",
    "description": "PHP library for parsing chess games in PGN and FEN formats",
    "license": "MIT",
    "authors": [
        {
            "name": "Ondřej Šplíchal",
            "email": "ondrej.splichal@gmail.com"
        }
    ],
    "require": {
        "php" : "^7.2|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Onspli\\Chess\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.4"
    },
    "scripts": {
        "test": [
          "@putenv XDEBUG_MODE=coverage",
          "phpunit --testdox --coverage-text --coverage-clover tmp/clover.xml --whitelist src tests"
        ],
        "coverall": [
          "php-coveralls --coverage_clover=tmp/clover.xml -o tmp -v"
        ]
    },
    "archive": {
        "exclude": ["tests"]
    }
}

{
    "name": "onspli/chess",
    "description": "PHP library for parsing chess games in PGN and FEN formats",
    "license": "MIT",
    "authors": [
        {
            "name": "Ondřej Šplíchal",
            "email": "ondrej.splichal@gmail.com"
        }
    ],
    "require": {
        "php" : "^7.2|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Onspli\\Chess\\": "src"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/onspli/phpdoc-markdown-public"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.4",
        "cvuorinen/phpdoc-markdown-public": "dev-onspli"
    },
    "scripts": {
        "test": [
          "phpunit --testdox --coverage-text --coverage-html build/logs/coverage --coverage-clover build/logs/clover.xml --whitelist src tests"
        ],
        "coverall": [
          "php-coveralls -v"
        ],
        "docs": [
          "php bin/generate_readme.php",
          "php phpDocumentor.phar --template=vendor/cvuorinen/phpdoc-markdown-public/data/templates/markdown-public"
        ],
        "download-phpdoc": [
          "wget https://github.com/phpDocumentor/phpDocumentor/releases/download/v2.0.0/phpDocumentor.phar"
        ]
    },
    "archive": {
        "exclude": ["tests"]
    }
}
